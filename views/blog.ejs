<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Example Blog</title>

<!-- Bootstrap core CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

<!-- Custom fonts -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Lato:ital@0;1&family=Raleway:wght@300;600;800&display=swap" rel="stylesheet"> 

<!-- Custom styles -->
<link href="css/clean-blog.css" rel="stylesheet">
<link href="css/style.css" rel="stylesheet">

</head>

<body>

  <%- include('partials/nav') %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('https://images.unsplash.com/photo-1588392382834-a891154bca4d?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2255&q=80')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Blog Test</h1>
            <span class="subheading">Express blog CRUD test</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
          <form action="/blog" method="POST">
          <div class="form">
            <label for="title">Post title: </label>
            <input type="text" name="title" id="title" required maxlength="45">
          </div>
          <div class="form">
            <label for="name">Your name: </label>
            <input type="text" name="author" id="author" required maxlength="18">
          </div>
          <div class="form-content">
            <textarea rows="4" cols="60" name="content" required></textarea>
            <div>
              <input type="submit" value="Submit" class="btn btn-primary">
            </div>
          </div>
        </form>
        <!-- Begin post loop -->
        <% for (let p of posts) {%> 
          <div class="post-preview">
            <a href="/blog/<%= p.id %>">
              <h2 class="post-title">
                <%= p.title %>
              </h2>
              <h3 class="post-subtitle">
                <%= p.subtitle %>...
              </h3>
            </a>
            <p class="post-meta">Posted by
              <a href="#"><%= p.author %></a>
              on <%= p.date %></p>
          </div>
          <hr>
        <% } %>
        <!-- End post loop -->
        <!-- Pager -->
        <div class="clearfix">
          <!-- In a non-example blog connected to an actual database, this is where pagination would happen -->
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <%- include('partials/footer') %>

  <!-- Bootstrap core JavaScript -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

  <!-- Custom scripts -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
